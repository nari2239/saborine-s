<header>
  <div class="navbar-inner">
    <div class="heading">
      <%= link_to 'Saborine', root_path, class: "navbar-left" %>
      <%= link_to about_records_path, method: :get, class: "about-button" do %>
        <i class="fas fa-info-circle fa-2x"></i>
      <% end %>
    </div>
    <div class="navbar">
      <ul class="navbar-right">
        <% unless user_signed_in? %>
          <li><%= link_to '新規登録', new_user_registration_path, class: "user-nav" %></li>
          <li><%= link_to 'ログイン', new_user_session_path, class: "user-nav" %></li>
        <% else %>
          <li><%= link_to current_user.nickname, user_path(current_user), class: "user-nav" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "user-nav" %></li>
        <% end %>
      </ul>
    </div>     
  </div>
</header>


